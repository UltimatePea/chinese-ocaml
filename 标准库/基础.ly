(* 骆言标准库 - 基础模块 *)
(* 提供最基本的函数式编程工具 *)

模块 基础 = {
  导出: [
    ("身份函数", 函数类型 (类型变量 "a", 类型变量 "a"));
    ("常量函数", 函数类型 (类型变量 "a", 函数类型 (类型变量 "b", 类型变量 "a")));
    ("组合函数", 函数类型 (函数类型 (类型变量 "b", 类型变量 "c"), 函数类型 (函数类型 (类型变量 "a", 类型变量 "b"), 函数类型 (类型变量 "a", 类型变量 "c"))));
    ("应用函数", 函数类型 (函数类型 (类型变量 "a", 类型变量 "b"), 函数类型 (类型变量 "a", 类型变量 "b")));
    ("翻转参数", 函数类型 (函数类型 (类型变量 "a", 函数类型 (类型变量 "b", 类型变量 "c")), 函数类型 (类型变量 "b", 函数类型 (类型变量 "a", 类型变量 "c"))));
  ];
  
  语句: [
    (* 身份函数：返回传入的值不变 *)
    夫 身份函数 者 受 x 焉 算法 乃 x 是谓;
    
    (* 常量函数：返回一个忽略第二个参数的函数 *)
    夫 常量函数 者 受 x y 焉 算法 乃 x 是谓;
    
    (* 函数组合：将两个函数组合成一个函数 *)
    夫 组合函数 者 受 f g x 焉 算法 乃 f (g x) 是谓;
    
    (* 应用函数：将函数应用到参数上 *)
    夫 应用函数 者 受 f x 焉 算法 乃 f x 是谓;
    
    (* 翻转参数：交换二元函数的参数顺序 *)
    夫 翻转参数 者 受 f x y 焉 算法 乃 f y x 是谓;
  ];
}