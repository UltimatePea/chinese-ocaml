(* 骆言模块系统测试 *)

(* 定义数学模块 *)
模块 数学 = {
  导出: [("加法", 函数类型 (整数类型, 函数类型 (整数类型, 整数类型)))];
  语句: [
    让 加法 = 函数 x y -> x + y;
    让 乘法 = 函数 x y -> x * y;
  ];
}

(* 定义字符串模块 *)  
模块 字符串工具 = {
  导出: [("问候", 函数类型 (字符串类型, 字符串类型))];
  语句: [
    让 问候 = 函数 名字 -> "你好, " + 名字 + "!";
    让 内部函数 = 函数 s -> s + "内部";
  ];
}

(* 测试模块访问 *)
让 结果1 = 数学.加法 5 3;
让 结果2 = 字符串工具.问候 "骆言";

(* 打印结果 *)
打印 "数学.加法(5, 3) = ";
打印 结果1;
打印 "字符串工具.问候(\"骆言\") = ";
打印 结果2; 