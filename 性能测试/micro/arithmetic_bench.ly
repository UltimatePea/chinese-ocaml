(* 算术运算性能基准测试 *)

(* 基础算术运算测试 *)
递归 让 算术测试 = 函数 n ->
  如果 n <= 0 那么
    0
  否则
    让 a = n + 1 在
    让 b = n * 2 在  
    让 c = n - 1 在
    让 d = n / 2 在
    让 e = n % 3 在
    (a + b + c + d + e) + 算术测试 (n - 1)

(* 大整数计算测试 *)
递归 让 大数运算 = 函数 n ->
  如果 n <= 1 那么
    n
  否则
    让 prev1 = 大数运算 (n - 1) 在
    让 prev2 = 大数运算 (n - 2) 在
    (prev1 * 3 + prev2 * 2) % 10000

(* 主测试函数 *)
让 运行测试 = 函数 规模 ->
  打印 "开始算术运算性能测试"
  让 结果1 = 算术测试 规模 在
  打印 "整数运算测试完成"
  打印 结果1
  让 结果2 = 大数运算 (规模 / 2) 在
  打印 "大数运算测试完成"
  打印 结果2
  结果1 + 结果2

(* 执行基准测试 *)
让 测试规模 = 50
打印 "算术运算性能基准测试"
让 最终结果 = 运行测试 测试规模
打印 "基准测试完成"
打印 最终结果