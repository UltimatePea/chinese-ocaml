{
  "name": "luoyan-language",
  "displayName": "骆言语言支持",
  "description": "骆言(Luoyan) - 中文编程语言的VSCode扩展，提供语法高亮、智能提示等功能",
  "version": "0.1.0",
  "publisher": "luoyan-lang",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/UltimatePea/chinese-ocaml"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Syntax Highlighting"
  ],
  "keywords": [
    "骆言",
    "luoyan",
    "chinese",
    "中文编程",
    "programming language",
    "古文",
    "wenyan"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:luoyan"
  ],
  "contributes": {
    "languages": [
      {
        "id": "luoyan",
        "aliases": [
          "骆言",
          "Luoyan",
          "luoyan"
        ],
        "extensions": [
          ".ly",
          ".luoyan",
          ".骆言"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/file-icon-light.svg",
          "dark": "./icons/file-icon-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "luoyan",
        "scopeName": "source.luoyan",
        "path": "./syntaxes/luoyan.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "骆言语言配置",
      "properties": {
        "luoyan.enableSyntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "启用语法高亮"
        },
        "luoyan.enableAutoClosing": {
          "type": "boolean", 
          "default": true,
          "description": "启用自动闭合括号"
        },
        "luoyan.enableCodeFolding": {
          "type": "boolean",
          "default": true,
          "description": "启用代码折叠"
        },
        "luoyan.indentSize": {
          "type": "number",
          "default": 2,
          "description": "缩进大小"
        }
      }
    },
    "commands": [
      {
        "command": "luoyan.compile",
        "title": "编译骆言文件",
        "category": "骆言"
      },
      {
        "command": "luoyan.run",
        "title": "运行骆言文件", 
        "category": "骆言"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "luoyan.compile",
          "when": "resourceExtname == .ly",
          "group": "luoyan"
        },
        {
          "command": "luoyan.run",
          "when": "resourceExtname == .ly",
          "group": "luoyan"
        }
      ]
    },
    "keybindings": [
      {
        "command": "luoyan.compile",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "resourceExtname == .ly"
      },
      {
        "command": "luoyan.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r", 
        "when": "resourceExtname == .ly"
      }
    ],
    "snippets": [
      {
        "language": "luoyan",
        "path": "./snippets/luoyan.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {}
}