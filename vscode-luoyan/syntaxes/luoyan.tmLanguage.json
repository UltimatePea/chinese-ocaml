{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "骆言",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.luoyan",
          "begin": "「：",
          "end": "：」",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.luoyan"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.luoyan",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.luoyan",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.luoyan",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.luoyan",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.luoyan",
          "match": "\\b(让|递归|在|函数|如果|那么|否则|匹配|与|类型|真|假|并且|或者|非|作为|组合|以及|当|否则返回|默认为|异常|抛出|尝试|捕获|最终|模块|模块类型|签名|结束|函子|引用|类|继承|方法|新建|自己|私有|虚拟|宏|展开)\\b"
        },
        {
          "name": "keyword.control.wenyan.luoyan",
          "match": "\\b(吾有|一|名曰|设|也|乃|曰|其值|为|数|术|欲行|必先得|為是|遍|云云|若|者|大于|小于)\\b"
        },
        {
          "name": "keyword.control.ancient.luoyan",
          "match": "\\b(夫|是谓|算法|竟|观|性|则|余者|答|合|为一|取|受|之|焉|其|列开始|列结束|其一|其二|其三|空空如也|有首有尾|首名为|尾名为|则答|并加|观察毕|始|毕|故|当|且|也)\\b"
        },
        {
          "name": "keyword.control.natural.luoyan",
          "match": "\\b(定义|接受|时返回|否则返回|乘以|加上|减去|等于|小于等于|首元素|剩余|空|字符数量|输入|输出|减一|加|其中|小)\\b"
        },
        {
          "name": "keyword.type.luoyan",
          "match": "\\b(整数|浮点数|字符串|布尔|单元|列表|数组)\\b"
        },
        {
          "name": "constant.language.boolean.luoyan",
          "match": "\\b(真|假)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.luoyan",
          "match": "[\\+\\-\\*/%]|乘|加|减|得"
        },
        {
          "name": "keyword.operator.comparison.luoyan",
          "match": "==|<>|<=|>=|<|>|大于|小于|等于"
        },
        {
          "name": "keyword.operator.assignment.luoyan",
          "match": "=|:="
        },
        {
          "name": "keyword.operator.logical.luoyan",
          "match": "&&|\\|\\||!|并且|或者|非"
        },
        {
          "name": "keyword.operator.arrow.luoyan",
          "match": "->|=>|<-|→|⇒|←"
        },
        {
          "name": "keyword.operator.string.luoyan",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.method.luoyan",
          "match": "#"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.quoted-identifier.luoyan",
          "match": "[「」]"
        },
        {
          "name": "punctuation.definition.array.luoyan",
          "match": "\\[\\||\\|\\]|「\\||\\|」"
        },
        {
          "name": "punctuation.definition.group.luoyan",
          "match": "[\\(\\)]|（|）"
        },
        {
          "name": "punctuation.definition.block.luoyan",
          "match": "[\\{\\}]|『|』"
        },
        {
          "name": "punctuation.separator.luoyan",
          "match": "[,;:|]|，|；|：|｜"
        },
        {
          "name": "punctuation.definition.placeholder.luoyan",
          "match": "_"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.quoted.luoyan",
          "begin": "「",
          "end": "」",
          "captures": {
            "0": {
              "name": "punctuation.definition.variable.luoyan"
            }
          }
        },
        {
          "name": "variable.other.luoyan",
          "match": "[\\p{L}\\p{N}_][\\p{L}\\p{N}_]*"
        }
      ]
    }
  },
  "scopeName": "source.luoyan"
}