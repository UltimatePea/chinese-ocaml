{
  "简单变量定义": {
    "prefix": "设",
    "body": [
      "设 ${1:变量名} 为 ${2:值}"
    ],
    "description": "简单变量定义"
  },
  "函数定义": {
    "prefix": "函数",
    "body": [
      "函数 ${1:函数名} ${2:参数} ->",
      "  ${3:// 函数体}",
      "  ${4:返回值}"
    ],
    "description": "函数定义"
  },
  "古雅体函数": {
    "prefix": "夫",
    "body": [
      "夫 ${1:函数名} 者 受 ${2:参数} 焉 算法 乃",
      "  ${3:// 函数实现}",
      "  答 ${4:返回值}",
      "是谓"
    ],
    "description": "古雅体函数定义"
  },
  "条件判断": {
    "prefix": "如果",
    "body": [
      "如果 ${1:条件} 那么",
      "  ${2:// 真分支}",
      "否则",
      "  ${3:// 假分支}"
    ],
    "description": "条件判断"
  },
  "古雅体条件": {
    "prefix": "若",
    "body": [
      "若 ${1:条件} 则",
      "  ${2:// 真分支}",
      "余者",
      "  ${3:// 假分支}"
    ],
    "description": "古雅体条件判断"
  },
  "模式匹配": {
    "prefix": "观",
    "body": [
      "观 ${1:值} 之 性",
      "若 ${2:模式1} 则 ${3:结果1}",
      "若 ${4:模式2} 则 ${5:结果2}",
      "若 _ 则 ${6:默认结果}",
      "观毕"
    ],
    "description": "模式匹配"
  },
  "打印语句": {
    "prefix": "打印",
    "body": [
      "打印 ${1:\"内容\"}"
    ],
    "description": "打印输出"
  },
  "注释": {
    "prefix": "注释",
    "body": [
      "「：${1:注释内容}：」"
    ],
    "description": "骆言注释"
  },
  "列表定义": {
    "prefix": "列表",
    "body": [
      "[${1:元素1}; ${2:元素2}; ${3:元素3}]"
    ],
    "description": "列表定义"
  },
  "Hello World": {
    "prefix": "hello",
    "body": [
      "「：骆言示例程序：你好世界：」",
      "",
      "设 问候 为 \"你好，世界！\"",
      "打印 问候"
    ],
    "description": "Hello World程序"
  },
  "递归函数模板": {
    "prefix": "递归",
    "body": [
      "夫 ${1:函数名} 者 受 ${2:参数} 焉 算法 乃",
      "  若 ${3:基础条件} 则",
      "    答 ${4:基础值}",
      "  余者",
      "    答 ${5:递归调用}",
      "是谓"
    ],
    "description": "递归函数模板"
  }
}